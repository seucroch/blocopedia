 <div class="container">

  <%= form_for [wiki], html: { class: 'form-horizontal' } do |f| %>
  <% if wiki.errors.any? %>
    <div class="alert alert-block">
      <h4>There are <%= pluralize(wiki.errors.count, "error") %>.</h4>
      <ul>
        <% wiki.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<form action="wikiform">
  <div id="marked">

       <div class="siwteen columns">
        <%= control_group_tag(wiki.errors[:title]) do %>
          <%= f.label :title, class: 'control-label' %>
              <div class="one-third column alpha">
                <%= f.text_field :title %>
              </div>
        <% end %>

        <%= control_group_tag(wiki.errors[:body]) do %>
          <%= f.label :body, class: 'control-label' %>
              <div class="one-third column alpha">
                <%= f.text_area :body, rows: 8 %>
              </div>
        <% end %>
      </div>

      <div class="one-third column omega">
    
        <div id="markdown_title"> </div>
        
        <div id="markdown_body"> </div>
       
      </div>

    

        <div class="control-group">
          <%= f.label :public, class: 'control-label' %>
              <div class="controls"> 
                 <%= f.check_box :public %>
              </div>
        </div>


        <div class="sixteen colums">
          <%= f.submit "Save", class: 'button' %>
        </div> 
        </div>
  </div>
<% end %>
 </div>
