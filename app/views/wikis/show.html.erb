<h1><%= markdown @wiki.title %></h1>

<p><%= markdown @wiki.body %></p>

<% if can? :edit, @wiki %>
  <%= link_to "Edit", edit_wiki_path(@wiki), class: 'btn btn-mini' %>
<% end %>
<% if can? :destroy, @wiki %>
    <%= link_to "Delete Wiki", @wiki, method: :delete, class: 'btn btn-large btn-block btn-danger', confirm: 'Are you sure you want to delete this wiki?' %> 
<% end %>

